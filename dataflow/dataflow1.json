{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					},
					"name": "telemetry",
					"description": "plik danych telemetrii (maÅ‚y)"
				},
				{
					"dataset": {
						"referenceName": "DelimitedText2",
						"type": "DatasetReference"
					},
					"name": "Errors"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "ErrorsToColums"
				},
				{
					"name": "join1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          datetime as timestamp,",
				"          machineID as short,",
				"          volt as double,",
				"          rotate as double,",
				"          pressure as double,",
				"          vibration as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> telemetry",
				"source(output(",
				"          datetime as timestamp,",
				"          machineID as short,",
				"          errorID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Errors",
				"Errors pivot(groupBy(datetime,",
				"          machineID),",
				"     pivotBy(errorID),",
				"     sumaWystapien = count(errorID),",
				"     columnNaming: '$N$V',",
				"     lateral: false) ~> ErrorsToColums",
				"telemetry, ErrorsToColums join(telemetry@datetime == ErrorsToColums@datetime",
				"     && telemetry@machineID == ErrorsToColums@machineID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 select(mapColumn(",
				"          datetime = telemetry@datetime,",
				"          machineID = telemetry@machineID,",
				"          volt,",
				"          rotate,",
				"          pressure,",
				"          vibration,",
				"          datetime = ErrorsToColums@datetime,",
				"          machineID = ErrorsToColums@machineID",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1"
			]
		}
	}
}